<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<style name="CommonEditTextStyle" parent="@android:style/Widget.EditText">
		<item name="font">Context-Condensed-SSi-Condensed.ttf</item>
        <item name="android:clickable">false</item>
		<item name="android:background">@drawable/edit_text_selector</item>
		<item name="android:padding">5dp</item>
		<item name="android:textColor">@android:color/black</item>
		<item name="android:textCursorDrawable">@null</item>
		<item name="android:gravity">center_vertical|left</item>
		<item name="android:singleLine">true</item>
		<item name="android:ellipsize">end</item>
	</style>
    
	<style name="CommonTextViewStyle" parent="@android:style/TextAppearance.Small">
		<item name="font">Context-Condensed-SSi-Condensed.ttf</item>
		<item name="android:textColor">@android:color/white</item>
		<item name="android:gravity">center_vertical|left</item>	
		<item name="android:ellipsize">end</item>
		<item name="android:scrollHorizontally">false</item>
		<item name="android:paddingRight">3dp</item>
	</style>

	<style name="CommonWebViewStyle" parent="@android:style/Widget.WebView">
		<item name="font">Context-Condensed-SSi-Condensed.ttf</item>
		<item name="android:textColor">@android:color/white</item>
		<item name="android:gravity">center_vertical|left</item>	
		<item name="android:ellipsize">end</item>
		<item name="android:scrollHorizontally">false</item>
		<item name="android:paddingRight">3dp</item>
	</style>
		
	<style name="CommonButtonStyle" parent="@android:style/Widget.Button">
		<item name="font">Context-Condensed-SSi-Condensed.ttf</item>
		<item name="android:background">@drawable/button_selector</item>
		<item name="android:padding">5dp</item>
		<item name="android:focusable">true</item>
		<item name="android:clickable">true</item>
		<item name="android:gravity">center_vertical|center_horizontal</item>
	</style>
    
	<style name="CommonRadioButtonStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
		<item name="font">Context-Condensed-SSi-Condensed.ttf</item>
		<item name="android:padding">5dp</item>
		<item name="android:focusable">true</item>
		<item name="android:clickable">true</item>
		<item name="android:gravity">center_vertical|left</item>
	</style>
		
	<style name="CommonCheckboxStyle" parent="@android:style/Widget.CompoundButton.CheckBox">
		<item name="font">Context-Condensed-SSi-Condensed.ttf</item>
		<item name="android:padding">5dp</item>
		<item name="android:focusable">true</item>
		<item name="android:clickable">true</item>
		<item name="android:gravity">center_vertical|left</item>
	</style>
		
	<style name="CommonSpinnerStyle" parent="@android:style/Widget.Spinner">
		<item name="font">Context-Condensed-SSi-Condensed.ttf</item>
	</style>

	<style name="CommonSpinnerDropDownItemStyle" parent="@android:style/Widget.DropDownItem">
		<item name="font">Context-Condensed-SSi-Condensed.ttf</item>
	</style>

	<style name="CommonSpinnerItemStyle" parent="@android:style/Widget.TextView.SpinnerItem">
		<item name="font">Context-Condensed-SSi-Condensed.ttf</item>
	</style>

	<style name="CommonImageViewStyle">
		<item name="android:padding">5dp</item>
	</style>
		
