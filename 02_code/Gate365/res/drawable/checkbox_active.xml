<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
		    <item
		        android:top="0dip"
		        android:right="0dip"
		        android:bottom="0dip"
		        android:left="0dip">
				<shape>
					<solid android:color="@color/red"/>
				    <corners android:radius="2dip"/>
				    <stroke android:width="1dip" android:color="@color/red"/>
				</shape>
			</item>			    
	        <item
		        android:top="1dip"
		        android:right="1dip"
		        android:bottom="1dip"
		        android:left="1dip">
				<shape>
					<solid android:color="@android:color/black"/>
				    <corners android:radius="2dip"/>
				    <stroke android:width="1dip" android:color="@android:color/black"/>
				</shape>
	            	            
	        </item>
	        
	        	        
		    <item
		        android:top="2dip"
		        android:right="2dip"
		        android:bottom="2dip"
		        android:left="2dip">
	            <shape  android:shape="rectangle">
	                <solid android:color="@android:color/transparent"/>
	                <corners android:radius="5dp" />
	                <size android:height="16dp" android:width="16dp" />
	            </shape>
			</item>			    
        <item>
            <bitmap android:gravity="center" android:src="@drawable/ic_check_active"/>
        </item>
</layer-list>