<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:background="@drawable/journey_item_selector">
    
    <com.travel.gate365.view.widget.FontableTextView android:id="@id/txt_datetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/CommonTextViewStyle"
        android:text="@string/journeys"/>

    <RelativeLayout android:id="@id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_datetime">
        
        <ImageView android:id="@id/img_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
	        style="@style/CommonImageViewStyle"
            android:contentDescription="@string/journeys"/>
        
        <ImageView android:id="@id/img_arrow"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_alignParentRight="true"
        	android:padding="5dp"
        	style="@style/CommonImageViewStyle"
        	android:contentDescription="@string/journeys"
        	android:src="@drawable/arrow_selector"/>
        
    </RelativeLayout>
    
</RelativeLayout>
