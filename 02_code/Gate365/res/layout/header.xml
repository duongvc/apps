<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:background="@drawable/header_selector">
    
    <ImageView android:id="@id/img_ic_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/CommonImageViewStyle"
        android:contentDescription="@string/login_U"
        android:src="@drawable/ic_0"/>

    <com.travel.gate365.view.widget.FontableTextView android:id="@id/txt_header_left" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_ic_header"
        android:layout_centerVertical="true"
        style="@style/CommonTextViewStyle" 
        android:textColor="@android:color/black"
        android:text="@string/login_U"/>

    <com.travel.gate365.view.widget.FontableTextView android:id="@id/txt_header_right" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        style="@style/CommonTextViewStyle"
        android:textColor="@android:color/black" 
        android:text=""/>
    
</RelativeLayout>