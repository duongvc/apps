<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.travel.gate365"
    android:versionCode="1"
    android:versionName="1.0.5" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="16" />

  <!-- Donut-specific flags which allow us to run on any dpi screens. -->
  <supports-screens android:resizeable= "false"
                    android:largeScreens="true"
                    android:normalScreens="true"
                    android:smallScreens="true"
                    android:xlargeScreens="true"
                    android:anyDensity="false" />
      
    <uses-permission android:name="android.permission.INTERNET" />
	<!-- Wifi related  -->
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_OWNER_DATA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.travel.gate365.Gate365Activity"
            android:label="@string/app_name" 
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode"
            android:windowSoftInputMode="adjustPan">            
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.journeys.JourneysActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize"
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity android:name=".view.journeys.JourneyDetailActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize"
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity android:name=".view.alert.AlertActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize"
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity android:name=".view.alert.AlertDetailActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize"
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity android:name=".view.travel.DesCountriesActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize"
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity android:name=".view.travel.AdvicesActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize"
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity android:name=".view.travel.AdviceDetailActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize"
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity android:name=".view.travel.TipCountryActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize"
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity android:name=".view.travel.TipDetailActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize"
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity android:name=".view.travel.RisksCountryActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize"
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity android:name=".view.SettingsActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize"
            android:windowSoftInputMode="stateHidden">
        </activity>
	</application>

</manifest>